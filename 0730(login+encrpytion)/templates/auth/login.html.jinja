{% extends "base.html.jinja" %}
{% block title %}
login page
{% endblock %}

{% block main%}
<div>
    <h1>Login page</h1>
</div>

<form method="POST">
    {{ form.csrf_token }}
    <div class="mb-3">
        {{ form.email.label(class="form-label") }} {{form.email(class="form-control",size=30,minlength=4,maxlength=30)}}
    </div>
    <div class="mb-3">
        {{ form.password.label(class='form-label')}} {{ form.password(class='form-control')}}
    </div>
    <input type="submit" value="確定" class="btn btn-primary">
    <a href="/auth/register" class="ps-3">註冊帳號</a>


</form>
{% if form.email.errors %}
<ul>
    {% for error in form.email.errors %}
    <li>
        <div class="'alert alert-warning" role="alert">
            {{error}}
        </div>
    </li>
    {% endfor %}
</ul>
{% endif %}
{% endblock%}