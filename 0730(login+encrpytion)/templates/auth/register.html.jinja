{% extends "base.html.jinja" %}
{% block title %}
註冊帳號
{% endblock%}

{% block main%}
<h1>註冊帳號</h1>
<form method="POST">
    {{ form.csrf_token }}
    <table class="table caption-top ">
        <caption>註冊帳號</caption>
        <tbody class="table-group-divider">
            <tr>
                <th scope="row" class="col-2 text-end ">{{form.uName.label(class="form-label")}}</th>
                <td>{{form.uName(class="form-control")}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uGender.label(class="form-label")}}</th>
                <td>{{form.uGender(class="form-select")}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uPhone.label(class="form-label")}}</th>
                <td>{{form.uPhone(class="form-control")}}
                    <p class="lead h6 mt-3"><u>格式:0935-314-926</u></p>
                    {% if(form.uPhone.errors) %}
                    <ul class="errors">
                        {% for error in form.uPhone.errors %}
                        <li>
                            <div class="alert alert-warning" role="alert">
                                {{ error }}
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uEmail.label(class="form-label")}}</th>
                <td>
                    {{form.uEmail(class="form-control")}}
                    {% if(form.uEmail.errors) %}
                    <ul class="errors">
                        {% for error in form.uEmail.errors %}
                        <li>
                            <div class="alert alert-warning" role="alert">
                                {{ error }}
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </td>

            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.isGetEmail.label(class="form-label")}}</th>
                <td>{{form.isGetEmail(class="form-check-input")}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uBirthday.label(class="form-label")}}</th>
                <td>{{form.uBirthday()}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uAboutMe.label(class="form-label")}}</th>
                <td>{{form.uAboutMe(class="form-control",placeholder="最多200字")}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uPass.label(class="form-label")}}</th>
                <td>{{form.uPass(class="form-control")}}
                    <p class="lead h6 mt-3" style="font-size: 0.8em;"><u>最少4個字元,最多20個字元</u></p>
                    {% if(form.uPass.errors) %}
                    <ul class="errors">
                        {% for error in form.uPass.errors %}
                        <li>
                            <div class="alert alert-warning" role="alert">
                                {{ error }}
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </td>

            </tr>
            <tr>
                <th scope="row" class="col-2 text-end">{{form.uConfirmPass.label(class="form-label")}}</th>
                <td>{{form.uConfirmPass(class="form-control")}}</td>
            </tr>
            <tr>
                <th scope="row" class="col-2 text-end"></th>
                <td><input class="btn btn-primary" type="submit"></td>
            </tr>

        </tbody>
    </table>
</form>
{{ super() }}
</div>
{% endblock %}