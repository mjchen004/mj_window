{% extends 'base.html.jinja' %}

{% block title%}
{{ super() }} - 首頁
{% endblock %}

{% block head%}
{{ super() }}
<style type"text/css">
    body {
        background-color: blue;
    }
</style>
{% endblock %}


{% block main%}
<div class="container text-center">
    <div class="row">
        <div class="col-4" style="background-color:beige">
        <form action="{{url_for('index')}}" method="get">
            <select class="form-select" aria-label="Default select example" name="area">
                <option selected>{{show_area}}</option>
                {% for area in areas %}
                    {% if area != show_area %}               
                        <option value="{{area}}">{{area}}</option>
                    {% endif %}          
                {% endfor %}
            </select>
            <button type="submit" class="btn btn-primary">送出</button>
        </form>
        </div>
        <div class="col-8" style="background-color:bisque">
                <h3 style="text-align: left;margin-top:0.5em">{{show_area}}</h3>
                {% for area in areas %}
                {{area}}
                {% endfor %}
        </div>
    </div>
    </main>
    {% endblock %}